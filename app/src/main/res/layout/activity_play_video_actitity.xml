<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_more"
    tools:context=".PlayVideoActitity">

    <ImageView
        android:id="@+id/ivBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="10dp"
        android:src="@mipmap/icon_video_back_up" />

    <com.oem.sdk.mcuclient.RenderView
        android:id="@+id/mRenderView"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_centerInParent="true" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnDuijiang"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:drawableTop="@mipmap/icon_duijiangji_up"
            android:drawablePadding="8dp"
            android:gravity="bottom|center"
            android:text="对讲"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/btnDownAudio"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:drawableTop="@mipmap/icon_audio_up"
            android:drawablePadding="8dp"
            android:gravity="bottom|center"
            android:text="按住喊话"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/btnMianti"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:drawableTop="@mipmap/icon_speaker_up"
            android:drawablePadding="8dp"
            android:gravity="bottom|center"
            android:text="免提"
            android:textColor="@color/white" />
    </LinearLayout>


</RelativeLayout>